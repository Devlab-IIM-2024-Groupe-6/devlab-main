<div class="timeline">
    {% set steps = [
        {'id': 1, 'label': 'Dépôt du formulaire'},
        {'id': 2, 'label': 'Envoi à Emmaüs'},
        {'id': 3, 'label': 'Réception Emmaüs'},
        {'id': 4, 'label': 'Remise à zéro'},
        {'id': 5, 'label': 'Matériel envoyé'}
    ] %}
    {% for step in steps %}
        <div class="timeline-item 
            {% if step.id > result.currentStep.id %} timeline-item--invalid {% endif %}"
            data-position="below"
        >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z" />
            </svg>
            <p>{{ step.label }}</p>
        </div>
    {% endfor %}
    
</div>
