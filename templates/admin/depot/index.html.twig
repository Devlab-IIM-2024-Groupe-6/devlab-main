{% extends 'base.html.twig' %}

{% block title %}Gestion des Maintenances
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<div class="flex justify-between items-center mb-6">
			<h1 class="text-2xl font-bold">Maintenance du dépôt
				{{ app.user.deposit.name }}</h1>
			<a href="#" class="btn btn-primary">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
				</svg>
				Nouvelle entrée
			</a>
		</div>

		<div class="card bg-base-100 shadow">
			<div class="card-body">
				<div class="overflow-x-auto">
					<table class="table table-zebra">
						<thead>
							<tr>
								<th>ID</th>
								<th>Client</th>
								<th>État actuel</th>
								<th>Dépôt</th>
								<th>Dernière mise à jour</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for device in deviceMaintenance %}
								<tr>
									<td>{{ device.id }}</td>
									<td>{{ device.client.lastname }} {{ device.client.firstname }}</td>
									<td>
										<span class="badge badge-info">
											{% if device.maintenanceLogs|length > 0 %}
												{{ device.maintenanceLogs[0].currentStep ? device.maintenanceLogs[0].currentStep.name : 'Non défini' }}
											{% else %}
												-
											{% endif %}
										</span>
									</td>
									<td>{{ device.deposit.name }}</td>
									<td>
										{% if device.maintenanceLogs|length > 0 %}
											{{ device.maintenanceLogs[0].changedAt|date('d/m/Y H:i') }}
										{% else %}
											-
										{% endif %}
									</td>
									<td>
										<div class="flex gap-2">
											<a href="#" class="btn btn-sm btn-info" title="Voir détails">
												<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
													<path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
													<path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"/>
													<path d="M12 16v-5"/>
													<path d="M12 8h.01"/>
												</svg>
											</a>
											<a href="{{ path('maintenance_edit', { id: device.id }) }}" class="btn btn-sm btn-warning" title="Modifier">
												<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
													<path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4"/>
													<path d="M13.5 6.5l4 4"/>
												</svg>
											</a>
											<a href="#" class="btn btn-sm btn-error" onclick="document.getElementById('confirmDeleteButton').href='{{ path('maintenance_delete', { id: device.id }) }}'; deleteModal.showModal();">
												<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
													<path d="M4 7l16 0"/>
													<path d="M10 11l0 6"/>
													<path d="M14 11l0 6"/>
													<path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
													<path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
												</svg>
											</a>
												{# <a href="{{ path('maintenance_delete', { id: device.id }) }}" class="btn btn-sm btn-error" title="Supprimer">
													<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
														<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
														<path d="M4 7l16 0"/>
														<path d="M10 11l0 6"/>
														<path d="M14 11l0 6"/>
														<path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
														<path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
													</svg>
												</a> #}

										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6" class="text-center">
										<div class="alert alert-info">Aucune maintenance trouvée</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- Modale de confirmation -->
<!-- Modale de confirmation -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="text-lg font-bold">Confirmation</h3>
        <p class="py-4">Voulez-vous vraiment supprimer cette maintenance ?</p>

        <div class="modal-action">
            <a id="confirmDeleteButton" href="#" class="btn btn-error">Supprimer</a>
            <form method="dialog">
                <button class="btn">Annuler</button>
            </form>
        </div>
    </div>
</dialog>



{% endblock %}
