{% extends 'base.html.twig' %}

{% block title %}Déposer un matériel{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Déposer un matériel</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.item_name) }}
            {{ form_widget(form.item_name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.item_name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.item_description) }}
            {{ form_widget(form.item_description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.item_description) }}
        </div>

        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
