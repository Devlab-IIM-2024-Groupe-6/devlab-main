{% extends 'base.html.twig' %}

{% block title %}Suivi de mon dépôt
{% endblock %}

{% block body %}
	<div
		class="container mx-auto my-10 px-6 lg:px-20">
		<!-- Header -->
		<header class="text-center mb-8">
			<h1 class="text-4xl font-bold text-primary">Suivi de votre dépôt</h1>
			<p class="text-gray-600 mt-2">
				Entrez votre numéro de suivi pour connaître l'état de votre dépôt.
			</p>
		</header>

		<!-- Formulaire de suivi -->
		<section>
			<form action="#" method="post" class="bg-base-100 shadow-md rounded-lg p-6 space-y-4">
				<div class="form-control">
					<label for="tracking-number" class="label">
						<span class="label-text">Numéro de suivi :</span>
					</label>
					<input type="text" id="tracking-number" name="tracking_number" class="input input-bordered w-full" placeholder="Ex : 12345-ABCDE" required>
				</div>
				<button type="submit" class="btn btn-primary w-full">Vérifier</button>
			</form>
		</section>

		<!-- Résultat du suivi -->
		<section class="mt-6 hidden" id="tracking-result">
			<div class="alert alert-info shadow-lg">
				<div>
					<span class="font-bold">Statut :</span>
					<span>Votre dépôt est en cours de traitement.</span>
				</div>
			</div>
		</section>
	
    <div class="TimeLine">
    
    <!-- templates/timeline.html.twig -->
<div class="timeline">
    <div class="timeline-item" data-position="above">
        <div class="timeline-content">
            
            <p>Dépot du materiel </p>
        </div>
    </div>
   
    <div class="timeline-item" data-position="above">
        <div class="timeline-content">
            
            <p>Envoie à Emmaüs </p>
        </div>
    </div>
     <div class="timeline-item" data-position="above">
        <div class="timeline-content">
            
            <p>Reception Emmaüs </p>
        </div>
    </div>
     <div class="timeline-item" data-position="above">
        <div class="timeline-content">
            
            <p>Remise à zero </p>
        </div>
    </div>
    <div class="timeline-item" data-position="above">
        <div class="timeline-content">
           
            <p>envoie au nouvelle utilisateur</p>
        </div>
    </div>
     <div class="timeline-item" data-position="above">
        <div class="timeline-content">
           
            <p>Arrivé</p>
        </div>
    </div>
</div>

    </div>
    
</div>
{% endblock %}
